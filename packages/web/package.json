{
  "name": "web",
  "version": "0.0.0",
  "scripts": {
    "# general commands": "##################################################",
    "build": "next build && yarn sitemap",
    "build:local": "env-cmd yarn build",
    "build:static": "yarn build && next export",
    "build:static-local": "env-cmd yarn build:static",
    "dev": "next",
    "dev:sync": "run-p -ln dev sync",
    "lint": "eslint --fix \"./**/*.{js,jsx,ts,tsx}\"",
    "precommit": "lint-staged",
    "sitemap": "next-sitemap --config config/sitemap.js",
    "start": "next start",
    "sync": "browser-sync start -p \"localhost:3000\"",
    "type-check": "tsc --noEmit",
    "validate": "yarn lint && yarn type-check",
    "# render commands": "###################################################",
    "render:build": "yarn render-prebuild && yarn build && yarn render-postbuild",
    "render:build-static": "yarn render-prebuild && build:static && yarn render-postbuild",
    "render:postbuild": "copy \".next/cache/**/*\" \"$XDG_CACHE_HOME/.next/cache\"",
    "render:prebuild": "copy \"$XDG_CACHE_HOME/.next/cache/**/*\" \".next/cache\"",
    "#": "###################################################################"
  },
  "dependencies": {
    "@chakra-ui/react": "^1",
    "@chakra-ui/theme-tools": "^1",
    "@chakra-ui/utils": "^1",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@types/node": "^14",
    "@types/nprogress": "^0",
    "@types/react": "^17",
    "@types/react-dom": "^17",
    "framer-motion": "^3",
    "next": "^10",
    "next-connect": "^0",
    "next-seo": "^4",
    "next-sitemap": "^1",
    "nprogress": "^0",
    "react": "^17",
    "react-dom": "^17",
    "typescript": "^4",
    "zustand": "^3"
  },
  "devDependencies": {},
  "private": true
}
