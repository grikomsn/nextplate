{
  "codeLens.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
    {
      "!cwd": false,
      "pattern": "packages/*"
    }
  ],
  "languageserver": {
    "graphql": {
      "command": "graphql-lsp",
      "args": ["server", "-m", "stream"],
      "filetypes": ["typescript", "typescriptreact", "graphql"]
    }
  },
  "npm.binPath": "yarn"
}
